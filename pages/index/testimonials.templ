templ testimonialSection(title string, data []Testimonial) {
	<section id="testimonials" class="glass-card p-4 my-16 mx-4 flex flex-col items-center">
		<h2 class="text-2xl font-bold mt-4">{ title }</h2>
		<div class="flex flex-col items-center mb-8">
			for _, t := range data {
				<article class="flex flex-col items-center text-center bg-white/25 shadow-xl rounded-xl p-4 mt-16">
					<img
						src={ t.Image }
						alt={ t.Name }
						class="w-32 h-32 rounded-full object-cover shadow-lg mb-2"
					/>
					<h3 class="text-xl font-semibold">{ t.Name }</h3>
					<p class="mb-4">{ t.Company }</p>
					<blockquote class="text-sm italic leading-relaxed">
						{ t.Message }
					</blockquote>
				</article>
			}
		</div>
	</section>
}

templ Testimonials() {
	<main>
		@testimonialSection("Client Feedback", clientTestimonials)
		@testimonialSection("Peer Endorsements", colleagueTestimonials)
	</main>
}
