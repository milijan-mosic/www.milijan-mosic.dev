templ RenderProjects(projects []Project) {
	for _, project := range projects {
		<div class="flex flex-col items-center mb-16 rounded-xl lg:flex-row lg:items-stretch bg-white/25">
			<div class="flex justify-center items-center mb-4 w-full rounded-t-xl shadow-md bg-black/50 lg:shadow-none lg:w-1/2 lg:mb-0 lg:rounded-t-none lg:rounded-l-xl">
				<img
					loading="lazy"
					src={ project.Thumbnail }
					alt={ fmt.Sprintf("Screenshot of the project named %s", project.Name) }
					class="rounded-t-2xl lg:rounded-t-none"
					width="512"
					height="512"
				/>
			</div>
			<div class="flex flex-col items-center w-full lg:p-8 lg:w-1/2">
				<h2 class="text-2xl font-bold">
					{ project.Name }
				</h2>
				<p class="px-4 mb-8 lg:px-8">
					{ project.Type }
				</p>
				<p class="p-4 mb-8 md:p-8">
					{ project.Description }
				</p>
				<div class="flex flex-wrap gap-2 justify-center px-4 mb-4">
					for _, role := range project.Role {
						<span class="px-4 py-2 text-sm text-black rounded-full bg-white/50">
							{ role }
						</span>
					}
				</div>
				<div class="flex flex-wrap gap-2 justify-center px-4 mb-8">
					for _, tech := range project.Technologies {
						<span class="px-2 py-1 text-sm rounded-full border-white border-1">
							{ tech }
						</span>
					}
				</div>
			</div>
		</div>
	}
}

templ Projects() {
	<section id="projects" class="glass-card p-4 md:p-8 my-16 mx-4 flex flex-col items-center md:w-[400px] lg:w-[550px] xl:w-[1000px]">
		<h2 class="mt-4 mb-16 text-2xl font-bold">Projects</h2>
		<div class="flex flex-col justify-center w-full lg:flex-row lg:flex-wrap">
			@RenderProjects(allProjects)
		</div>
		<a href="/#contact-me" class="p-2 px-6 mt-8 mb-4 text-lg bg-sky-800 rounded-full border-sky-500 animate md:px-8 border-1 hover:border-white hover:bg-white hover:text-black hover:cursor-pointer">
			Letâ€™s build something
		</a>
	</section>
}
